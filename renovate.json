{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "description": "Updating Helm chart versions",
      "fileMatch": ["deploy.yaml"],
      "matchStrings": [
          "apiVersion: *"
      ],
      "matchStringsStrategy": "any",
      "datasourceTemplate": "kubernetes-api"
    }
  ]
}
